<nav class="navbar navbar-expand">
  <div class="container-fluid">
    
    <%= link_to "Preze", pages_path("home"), :class=> 'navbar-brand' %>

    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item"><%= link_to 'Create', new_presentation_path, class: "nav-link" %></li>
