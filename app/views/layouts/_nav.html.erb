<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
  <% if user_signed_in? %>
    <%= link_to "Dashboard", presentations_path, :class=> 'navbar-brand' %>
  <% else %>
    <%= link_to "Presenta", root_url, :class=> 'navbar-brand' %>
  <% end %>

  <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to(edit_user_registration_path, :class => "nav-link") do %>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize: "40x40") %>
            <% end %>
            <%= current_user.email %>
          <% end %>
        </li>
        <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link' %></li>
      <% else %>
        <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, :class => 'nav-link' %></li>
