<%= simple_form_for @presentation, local: true do |form| %>

  <%= form.input :title %>

  <% if presentation.cover.attached? %>
    <%= image_tag presentation.cover.variant(resize: "250x250") %>
  <% end %>
  <%= form.input :cover, direct_upload: true, as: :file %>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
